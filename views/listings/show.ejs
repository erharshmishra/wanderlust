<% layout('/layouts/boilerplate.ejs') %>
<script>
   const coordinates = <%- JSON.stringify(listing.geometry.coordinates)%>;
    const locationLabel = "<%= listing.location %>";
</script>
<div class="row">
    <div class="col-8 offset-2">
        <h3 class="mt-3 mb-3"><%= listing.title %></h3>
        <div class="card listing-card">
            <img src="<%= listing.image.url %>"
                class="card-img-top show-img mb-3"
                alt="listing_image" />
            <div class="card-body">
                <p class="card-text">
                    <b>Owner : </b><%= listing.owner.username %><br>
                    <b>Description : </b><%= listing.description %><br>
                    <b>Price : </b>&#8377; <%= listing.price ?
                    listing.price.toLocaleString() : "Price not available"
                    %> / night<br>
                    <b>Location : </b><%= listing.location %><br>
                    <b>Country : </b><%= listing.country %><br>
                </p>
            </div>
        </div>
        <% if(currUser && listing.owner._id.equals(currUser._id)) {%>
        <div class="btns mb-3">
            <a href="/listings/<%= listing._id %>/edit"
                class="btn btn-dark show-btn">Edit</a>
            <form method="post"
                action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-dark offset-3">Delete</button>
            </form>
        </div>
        <hr>
        <% } %>
    </div>
    <div class="col-8 offset-2">
        <% if(currUser) {%>
        <h4>Leave a Review</h4>
        <form method="post" action="/listings/<%= listing._id %>/reviews"
            novalidate class="needs-validation">
            <div class="mb-3 mt-3">
                <label for="rating" class="form-label">Rating</label>
                <fieldset class="starability-slot">
                    <input type="radio" id="no-rate" class="input-no-rate"
                        name="review[rating]" value="1" checked
                        aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]"
                        value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]"
                        value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]"
                        value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]"
                        value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]"
                        value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
            </div>
            <div class="mb-3">
                <label for="comment" class="form-label">Comments</label>
                <textarea cols="30" rows="10" id="rating"
                    name="review[comment]" class="form-control"
                    required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please enter review.
                </div>
            </div>
            <button class="btn btn-outline-dark mb-3 mt-3">Submit</button>
        </form>
        <% } %>
        <% if(listing.reviews.length > 0) { %>
        <hr>
        <div class="row mb-3">
            <p><b>All Reviews</b></p>
            <% for(review of listing.reviews){ %>
            <div class="card col-5 ms-3 mb-3">
                <div class="card-body">
                    <h5 class="card-title mt-3">@<%= review.author.username
                        %></h5>
                    <p class="starability-result card-text" data-rating=<%=
                        review.rating %>>
                    </p>
                    <p class="card-text"><%= review.comment %></p>
                </div>
                <form method="post"
                    action="/listings/<%= listing._id %>/reviews/<%=review._id %>?_method=DELETE">
                    <button
                        class="btn btn-dark btn-sm mb-3 mt-3">Delete</button>
                </form>
            </div>
            <% }%>
        </div>
        <% } %>
    </div>
    <div class="col-8 offset-2 mb-3">
        <h3 class="mb-3">Where you'll be</h3>
        <div id="map"></div>
    </div>
</div>
<script src="/js/map.js"></script>
